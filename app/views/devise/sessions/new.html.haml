.sign_in__page
  .registration__header__logo
    =link_to "/" do
      =image_tag "header_logo.png"

  .sign_in__main
    .sign_in__main__panel
      .sign_in__main__panel__acount
        %p アカウントをお持ちでない方はこちら
        %a{href: "/users/sign_up"} 新規会員登録
      .registration__first__box__middle__input
        %ul
          %li
            %button{onclick: "location.href='#'", class: "registration__fb"}
              %i.fa.fa-facebook-square.registration_icon
              Facebookでログイン
          %li
            %button{onclick: "location.href='#'", class: "registration__go"} 
              =image_tag "go_icon.png", class: "registration_go_icon"
              Googleでログイン

      //入力フォーム
      .sign_in__main__panel_form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            -# .field-label
              -# = f.label :email
            .field-input
              = f.email_field :email, autofocus: true, placeholder: 'メールアドレス'
            .field
              -# .field-label
                -# %i
              .field-input
                = f.password_field :password, autocomplete: "off", placeholder: 'パスワード'
            .no_robot 私はロボットではありません
            .actions
              = f.submit "ログイン", class: 'sign_in__button'
            = link_to "パスワードをお忘れの方", "#", class: "pass_forbidden"

  = render partial: "devise/layout/footer"