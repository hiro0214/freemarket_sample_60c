.sign_in__page
  .sign_in__header
    %p.sign_in__logo ロゴ
  .sign_in__main
    .sign_in__main__panel
      .sign_in__main__panel__acount
        %p アカウントをお持ちでない方はこちら
        %a{:href => "#"} 新規会員登録
      .sign_in__main__panel__other
        %button.sign_in__main__panel__other__fb Facebookでログイン
        %button.sign_in__main__panel__other__go Googleでログイン

      //入力フォーム
      .sign_in__main__panel_form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            -# .field-label
              -# = f.label :email
            .field-input
              = f.email_field :email, autofocus: true, placeholder: 'メールアドレス'
            .field
              -# .field-label
                -# %i
              .field-input
                = f.password_field :password, autocomplete: "off", placeholder: 'パスワード'
            .no_robot 私はロボットではありません
            .actions
              = f.submit "ログイン", class: 'button'
            = link_to "パスワードをお忘れの方", "#", class: "pass_forbidden"


  .sign_in__footer
    %ul
      %li
        %a{:href => "#"} プライバシーポリシー
      %li
        %a{:href => "#"} メルカリ利用規約
      %li
        %a{:href => "#"} 特定商取引に関数表記
    %p ロゴ
    %p © 2019 Mercari
