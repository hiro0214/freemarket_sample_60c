.registration__header
  .progress
    = link_to "/" do
      = image_tag "header_logo.png", class: "progress__logo"
    .progress__bar
      .progress__bar__box
        %p.step1 会員情報
        .progress__bar__box__circle#step1
        .step1_bar

      .progress__bar__box
        %p#step2_text 電話番号認証
        .progress__bar__box__circle#step2_circle
        .step2_bar#step2

      .progress__bar__box
        %p#step3_text お届け先住所入力
        .progress__bar__box__circle#step3_circle
        .step3_bar#step3

      .progress__bar__box
        %p#step4_text 支払い方法
        .progress__bar__box__circle#step4_circle
        .step4_bar#step4

      .progress__bar__box
        %p#step5_text 完了
        .progress__bar__box__circle#step5_circle
        .step5_bar#step5

.registration__first
  .registration__first__box
    = form_for @delivery, url:create_step4_signup_index_path, method: :post, html: { class: 'step2_kari' } do |f|
      %h2.registration__first__box__top
        発送元・お届け先住所入力
      %form.registration__first__box__middle{ action: "regi_fifth" }
        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            = f.label "お名前（全角）"
            %span 必須
            = f.text_field :last_name, value: @user.last_name, autocomplete: "on", class:"signup_input_default", placeholder: "谷口"
            = f.text_field :first_name, value: @user.first_name, autocomplete: "on", class:"signup_input_default", placeholder: "寛人"

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            = f.label "お名前カナ（全角）"
            %span 必須

            = f.text_field :last_name_kana, value: @user.last_name_kana ,autocomplete: "on", class:"signup_input_default", placeholder: "タニグチ"
            = f.text_field :first_name_kana, value: @user.first_name_kana, autocomplete: "on", class:"signup_input_default", placeholder: "ヒロト"

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            =f.label "郵便番号"
            %span 必須
          .registration__first__box__middle__input__area
            = f.text_field :postal_code, autocomplete: "on", class:"signup_input_default jip", placeholder:" 例) 123-4567"

          -if flash[:postal_code_alert]
            %p.alert
              = flash[:postal_code_alert]

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            =f.label "都道府県"
            %span 必須
          .registration__first__box__middle__input__area
            = f.text_field :area, autocomplete: "on", class:"signup_input_default prefecture", placeholder:" 例) 神奈川県"
          -if flash[:area_alert]
            %p.alert
              = flash[:area_alert]

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            =f.label "市区町村"
            %span 必須
          .registration__first__box__middle__input__area
            = f.text_field :city, autocomplete: "on", class:"signup_input_default city", placeholder:" 例) 横浜市緑区"
          -if flash[:city_alert]
            %p.alert
              = flash[:city_alert]

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            =f.label "番地"
            %span 必須
          .registration__first__box__middle__input__area
            = f.text_field :address, autocomplete: "on", class:"signup_input_default town", placeholder:" 例) 青山1-1-1"
          -if flash[:address_alert]
            %p.alert
              = flash[:address_alert]

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            =f.label "建物名"
            %span.any 任意
          .registration__first__box__middle__input__area
            = f.text_field :building, autocomplete: "on", class:"signup_input_default", placeholder:" 例) 柳ビル103"

        .registration__first__box__middle__input
          .actions
            = f.submit "次へ進む", class: 'last_submit'

  = render partial: "devise/layout/footer"