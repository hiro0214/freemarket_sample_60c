.registration__header
  .progress
    =link_to "/" do
      =image_tag "header_logo.png", class: "progress__logo"
    .progress__bar
      .progress__bar__box
        %p.step1 会員情報
        .progress__bar__box__circle#step1
        .step1_bar

      .progress__bar__box
        %p#step2_text 電話番号認証
        .progress__bar__box__circle#step2_circle
        .step2_bar#step2

      .progress__bar__box
        %p#step3_text お届け先住所入力
        .progress__bar__box__circle#step3_circle
        .step3_bar#step3

      .progress__bar__box
        %p#step4_text 支払い方法
        .progress__bar__box__circle#step4_circle
        .step4_bar#step4

      .progress__bar__box
        %p#step5_text 完了
        .progress__bar__box__circle#step5_circle
        .step5_bar#step5

.registration__first
  .registration__first__box
    = form_for "", url: step5_signup_index_path, method: :get, html: {class: 'step2_kari'} do |f|
      %h2.registration__first__box__top 発送元・お届け先住所入力
      %form.registration__first__box__middle{action: "regi_fifth"}
        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            = f.label :お名前
            %span 必須
            = f.telephone_field :last_name, autocomplete: "off",class:"aaaa", placeholder:""
            = f.telephone_field :first_name, autocomplete: "off",class:"aaaa", placeholder:""

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            = f.label :お名前カナ
            %span 必須
            = f.text_field :last_name_kana, autofocus: true, class:"aaaa", placeholder: "タニグチ"
            = f.text_fie :first_name_kana, autofocus: true, class:"aaaa", placeholder: "ヒロト"
        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            = f.label :郵便番号
            %span 必須
            = f.telephon  :, autocomplete: "off",class:"aaaa", placeholder:"例)123-4567"

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            = f.label :都道府県
            %span 必須
          .registration__first__box__middle__input__area
            = f.text_field :region, Prefecture.all, :id, :name, {prompt: "---"}, {class: "select-default"}

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            = f.label :市区町村
            %span 必須
          %input.aaaa{placeholder: "  例) 横浜市緑区"}
          -# = f.telephone_field :last_name, autocomplete: "off",class:"aaaa", placeholder:""

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            番地
            %span 必須
          %input.aaaa{placeholder: "  例) 青山1-1-1"}
          -# = f.telephone_field :last_name, autocomplete: "off",class:"aaaa", placeholder:""

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            建物名
            %span.any 任意
          %input.aaaa{placeholder: "  例) 柳ビル103"}
          -# = f.telephone_field :last_name, autocomplete: "off",class:"aaaa", placeholder:""

        .registration__first__box__middle__input
          .registration__first__box__middle__input__name
            電話
            %span.any 任意
          %input.aaaa{placeholder: "  例) 09012345678"}
          -# = f.telephone_field :last_name, autocomplete: "off",class:"aaaa", placeholder:""


        .registration__first__box__middle__input
          .actions
            = f.submit "次へ進む", class: 'last_submit'


  = render partial: "devise/layout/footer"