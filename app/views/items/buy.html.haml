.sign_in__page
  .registration__header__logo
    =link_to root_path do
      =image_tag "header_logo.png", class: "logo"

.registration__first
  .registration__first__box
    %h2.registration__first__box__top
      %p.edit__top__title 購入内容の確認
    .edit__top
      .edit__top__box
        .edit__top__box__detail
          .edit__top__box__detail__img
            = image_tag @image.url, class: "buy_image"
          %p
            = @item.item_name
        .edit__top__box__price
          %p
            = "¥#{@item.price}"
            %span
              送料込み
        .edit__top__box__point
          %p ポイントはありません
        .edit__top__box__pay
          %p 支払い金額
          %p
            = "¥#{@item.price}"
        .edit__top__box__buy

          = link_to pay_purchase_index_path(@item),method: :post do
            %button 購入する

    .edit__middle
      .edit__middle__box
        %p 配送先
        .edit__middle__box__address
          %p 〒 #{@delivery.postal_code}
          %p #{@delivery.area} #{@delivery.city} #{@delivery.address}
          %p #{@delivery.building}
          %p #{@user.name}
        = link_to "変更する >","#"

    .edit__bottom
      .edit__bottom__box
        %p 支払い方法
        .edit__bottom__box__pay
          %p= "**** **** **** " + @default_card_information.last4
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          %p= exp_month + " / " + exp_year
          %p VISA
        = link_to "変更する >", "#"

  = render partial: "devise/layout/footer"