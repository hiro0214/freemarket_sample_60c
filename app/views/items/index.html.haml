- if flash[:buy_alert]
  .header_alert
    .header_alert_text
      %p
        = flash[:buy_alert]

= render "header"
.main_wrap
  .trim
    .main__image
      =image_tag "top_img1.png", class: "main__img1"
      =image_tag "top_img2.png", class: "main__img2"
  .main_contents
    .main_contents__box
      .main_contents__box__header
        .main_contents__box__header_tittle
          %h2 人気のカテゴリー
        .main_contents__box__header_category
          %ul.main_contents__box__header_category_list
            = link_to "#1", class: "main_contents__box__header_category_list_num" do
              レディース
            = link_to "#2", class: "main_contents__box__header_category_list_num" do
              メンズ
            = link_to "#3", class: "main_contents__box__header_category_list_num" do
              家電・スマホ・カメラ
            = link_to "#4", class: "main_contents__box__header_category_list_num" do
              おもちゃ・ホビー・グッズ

      .main_contents__box__contents
        .main_contents__box__contents__title_box
          .main_contents__box__contents__title_box__title
            %h2#1 レディース新着アイテム
          .main_contents__box__contents__title_box__motto
            = link_to "もっとみる", "/more/1",class:"link"
        .main_contents__box__contents__items.fadeout
          - @ladies_items.zip(@la_image).each do |item, image|
            .main_contents__box__contents__items__one
              = image_tag image.url.url, class: "index_image"
              .main_contents__box__contents__items__one__image__price
                = "¥#{item.price}"
              .main_contents__box__contents__items__one__title
                %span
                  = link_to "items/#{item[:item_id]}", method: :get do
                    = item.item_name
                    .clear

      .main_contents__box__contents
        .main_contents__box__contents__title_box
          .main_contents__box__contents__title_box__title
            %h2#2 メンズ新着アイテム
          .main_contents__box__contents__title_box__motto
            = link_to "もっとみる", "/more/138",class:"link"
        .main_contents__box__contents__items.fadeout
          - @mens_items.zip(@me_image).each do |item, image|
            .main_contents__box__contents__items__one
              = image_tag image.url.url, class: "index_image"
              .main_contents__box__contents__items__one__image__price
                = "¥#{item.price}"
              .main_contents__box__contents__items__one__title
                %span
                  = link_to "items/#{item[:item_id]}", method: :get do
                    = item.item_name
                    .clear

      .main_contents__box__contents
        .main_contents__box__contents__title_box
          .main_contents__box__contents__title_box__title
            %h2#3 家電・スマホ・カメラ新着アイテム
          .main_contents__box__contents__title_box__motto
            = link_to "もっとみる", "/more/781",class:"link"
        .main_contents__box__contents__items.fadeout
          - @machine_items.zip(@ma_image).each do |item, image|
            .main_contents__box__contents__items__one
              = image_tag image.url.url, class: "index_image"
              .main_contents__box__contents__items__one__image__price
                = "¥#{item.price}"
              .main_contents__box__contents__items__one__title
                %span
                  = link_to "items/#{item[:item_id]}", method: :get do
                    = item.item_name
                    .clear

      .main_contents__box__contents
        .main_contents__box__contents__title_box
          .main_contents__box__contents__title_box__title
            %h2#4 おもちゃ・ホビー・グッズ新着アイテム
          .main_contents__box__contents__title_box__motto
            = link_to "もっとみる", "/more/576",class:"link"
        .main_contents__box__contents__items.fadeout
          - @hobby_items.zip(@ho_image).each do |item, image|
            .main_contents__box__contents__items__one
              = image_tag image.url.url, class: "index_image"
              .main_contents__box__contents__items__one__image__price
                = "¥#{item.price}"
              .main_contents__box__contents__items__one__title
                %span
                  = link_to "items/#{item[:item_id]}", method: :get do
                    = item.item_name
                    .clear

.exhibit__btn
  .exhibit__btn__box
    %p.exhibit__btn__name 出品
    %i.exhibit__btn__icon.fa.fa-camera
  .exhibit__btn__circle

= render "footer"