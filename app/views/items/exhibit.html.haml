.exhibit__main

  .registration__header__logo
    =link_to "/" do
      =image_tag "header_logo.png"

  .exhibit__contents
    .exhibit__infomation
      %p 商品の情報を入力
    
    .exhibit__upload
      .exhibit__upload_head
        %div 出品画像
        %div 必須
      %p 最大10枚までアップロードできます
      .exhibit__upload_image
        -# %input{:name => "image", :placeholder => "Image Url", :type => "text"}/
        %label
          %div.exhibit__upload_image_field
            %p ドラッグアンドドロップ
            %p またはクリックしてファイルをアップロード
          %input.sell-upload-drop-file{:multiple => "", :name => "image1", :type => "file"}/
        
    
    .exhibit__explanation
      .exhibit__explanation__title
        .exhibit__explanation__title_head
          %p  商品名
          %p  必須
        .exhibit__explanation__title_field
          %input{ :placeholder => "商品名（必須 40文字まで)", :maxlength => "40", :name => "text", :type => "text", :value => ""}/
      .exhibit__explanation__detail
        .exhibit__explanation__detail_head
          %p  商品の説明
          %p  必須
        .exhibit__explanation__detail_field
          %textarea{:placeholder => "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", :type => "text"}
    .exhibit__detail.clearfix
      %span 商品の詳細
      .exhibit__detail__container
        .exhibit__detail__container__title
          .exhibit__detail__container__title_head
            %p  カテゴリー
            %p  必須
          .exhibit__detail__container__title_field
            %select.select-default
              %option{:value => ""} ---
              %option{:value => "1"} レディース
              %option{:value => "2"} メンズ
              %option{:value => "3"} ベビー・キッズ
              %option{:value => "4"} インテリア・住まい・小物
              %option{:value => "5"} 本・音楽・ゲーム
              %option{:value => "1328"} おもちゃ・ホビー・グッズ
              %option{:value => "6"} コスメ・香水・美容
              %option{:value => "7"} 家電・スマホ・カメラ
              %option{:value => "8"} スポーツ・レジャー
              %option{:value => "9"} ハンドメイド
              %option{:value => "1027"} チケット
              %option{:value => "1318"} 自動車・オートバイ
              %option{:value => "10"} その他
        .exhibit__detail__container__detail
          .exhibit__detail__container__detail_head
            %p  商品の状態
            %p  必須
          .exhibit__detail__container__detail_field
            %select.select-default
              %option{:value => ""} ---
              %option{:value => "1"} 新品、未使用
              %option{:value => "2"} 未使用に近い
              %option{:value => "3"} 目立った傷や汚れなし
              %option{:value => "4"} やや傷や汚れあり
              %option{:value => "5"} 傷や汚れあり
              %option{:value => "6"} 全体的に状態が悪い
    .exhibit__delivery.clearfix
